<h1>Upload your product!</h1>

<%= form_for [@user, @product] do |f| %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title, placeholder: "Name your product" %>
  </div>

  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description, placeholder: "Describe your product..." %>
  </div>

  <div class="field">
    <%= f.label :deadline %><br>
    <%= f.datetime_field :deadline %>
  </div><br>

  <div class="field">
    <%= f.label :min_bid %><br>
    <%= f.number_field :min_bid, class: :text_field, step: :any %>
  </div><br>

  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>
